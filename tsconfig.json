{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"]
    },
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "static/**",
    "**/@"
  ]
}
